package com.cts.stockmarket.service;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.cts.stockmarket.model.Stock;
import com.cts.stockmarket.repository.StockRepository;

@Service
public class StockServiceImpl implements IStockService {

	@Autowired
	private StockRepository stockRepository;
	
	@Override
	public Stock addStock(Stock stock) {
		if(stock != null) {
			return stockRepository.saveAndFlush(stock);
		}
		return null;
	}

	@Override
	public Stock getStockDetailsById(int stockCode) {
		Optional<Stock> stock= stockRepository.findById(stockCode);		//getById(stockCode);
		
		if(stock.isPresent())
			return stock.get();
		
		return null;
	}

	@Override
	public List<Stock> getAllStocksDetails() {
		List<Stock> stockList= stockRepository.findAll();
		
		if(stockList!=null && stockList.size()>0)
			return stockList;
		else
			return null;
	}

	@Override
	public boolean deleteStock(int stockCode) {
		if(stockRepository.getById(stockCode) != null) {
			stockRepository.deleteById(stockCode);
			return true;
		}
		else
			return false;
	}

	@Override
	public boolean updateStockPrice(Stock stock) {
		Stock existingStock= stockRepository.getById(stock.getStockCode());
		
		if(existingStock!=null) {
			existingStock.setStockPrice(stock.getStockPrice());
			stockRepository.saveAndFlush(existingStock);
			return true;
		}
		else
			return false;
	}

}
