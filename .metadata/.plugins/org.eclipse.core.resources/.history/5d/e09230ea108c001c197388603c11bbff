package com.cts.stockmarket.service;

import java.util.List;

import com.cts.stockmarket.model.Stock;

public interface IStockService {
	
	public Stock addStock(Stock stock);						//Registering new company
	
	public Stock getStockDetailsById(int stockCode);		//Fetch a particular company details
	
	public List<Stock> getAllStocksDetails();				//Fetches all company details
	
	public boolean deleteStock(int stockCode);				//Deletes a company
	
	public boolean updateStockPrice(Stock stock);			//Updates stock price of particular company
}
